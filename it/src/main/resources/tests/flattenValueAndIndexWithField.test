{
    "name": "field and flattened field with value and index",
    "backends": {
        "couchbase":         "pending",
        "lwc_local":         "pending",
        "marklogic_json":    "pending",
        "marklogic_xml":     "pending"
    },
    "data": "flattenable.data",
    "query": "select a, b[*], b[*:] as i from flattenable",
    "predicate": "exactly",
    "ignoreResultOrder": true,
    "expected": [
      {"a": 1, "b": true, "i": 0},
      {"a": 1, "b": true, "i": 1},
      {"a": 1, "b": true, "i": 2},
      {"a": 2, "b": false, "i": 0},
      {"a": 2, "b": false, "i": 1},
      {"a": 3, "i": 0},
      {"a": 4, "i": 0}
    ]
}
